doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="./public/css/style.css")
    body 
        header
            h1 Noom
        main
            div#welcome
                form
                    input(type="text" , placeholder="room name" , required)
                    input#nickname(type="text" , placeholder="nickname" , required)
                    button Enter
            div#call
                div#streams
                    div#myStream
                        h3 my browser
                        video#myFace(autoplay,playsinline,width="400",height="400" ,audio=false)
                        div#options
                            button#mute Mute
                            button#camera Camera Off
                            button#leave 나가기
                        select#cameras
                    div#peerStream
                        h3 peer browser
                        video#peerFace(autoplay,playsinline,width="400",height="400" ,audio=false)
        section
            div#chat
                h2 Chatting
                ul
                form#msg
                    input(type="text" , placeholder="message" , required)
                    button Send

         
            
        script(src="/socket.io/socket.io.js")    
        script(src="/public/js/app.js")
        